	number = {3},
	urldate = {2024-09-12},
	journal = {Functional Ecology},
	author = {Baumgarten, Frederik and Gessler, Arthur and Vitasse, Yann},
	month = mar,
	year = {2023},
	pages = {648--663},
	file = {Baumgarten et al. - 2023 - No risk—no fun Penalty and recovery from spring f.pdf:/Users/christophe_rouleau-desrochers/Zotero/storage/NKGB7RIZ/Baumgarten et al. - 2023 - No risk—no fun Penalty and recovery from spring f.pdf:application/pdf},
