	journal = {Agricultural and Forest Meteorology},
	author = {Camarero, J. Julio and Campelo, Filipe and Colangelo, Michele and Valeriano, Cristina and Knorre, Anastasia and Solé, Germán and Rubio-Cuadrado, Álvaro},
