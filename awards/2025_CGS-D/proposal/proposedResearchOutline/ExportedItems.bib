	keywords = {Seedling quality, Carbon reserve allocation, Outplanting success, Paclobutrazol, Seedling morphology},
	pages = {43--51},
	file = {ScienceDirect Full Text PDF:/Users/christophe_rouleau-desrochers/Zotero/storage/4874RMMJ/Landhäusser et al. - 2012 - Partitioning of carbon allocation to reserves or g.pdf:application/pdf;ScienceDirect Snapshot:/Users/christophe_rouleau-desrochers/Zotero/storage/JJL97LDB/S0378112712001430.html:text/html},
