	keywords = {climate change, climatic feedback, ecological implications, leaf coloring, leaf unfolding, mechanisms and drivers, phenological modeling, plant phenology, satellite-derived phenology},
	pages = {1922--1940},
	file = {Full Text PDF:/Users/christophe_rouleau-desrochers/Zotero/storage/XZJLZRA5/Piao et al. - 2019 - Plant phenology and global climate change Current.pdf:application/pdf;Snapshot:/Users/christophe_rouleau-desrochers/Zotero/storage/C6SWW7AC/gcb.html:text/html},
