	note = {Publisher: Oxford University Press},
	keywords = {Cell wall thickness, European Alps, Insect outbreak, Non-structural carbohydrates (NSC), Stable isotopes, Tree rings, Wood formation, Zeiraphera griseana},
	pages = {1697--1711},
