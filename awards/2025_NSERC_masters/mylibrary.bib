@article{mijnsbrugge_stimulation_2022,
	title = {Stimulation, {Reduction} and {Compensation} {Growth}, and {Variable} {Phenological} {Responses} to {Spring} and/or {Summer}–{Autumn} {Warming} in {Corylus} {Taxa} and {Cornus} sanguinea {L}.},
