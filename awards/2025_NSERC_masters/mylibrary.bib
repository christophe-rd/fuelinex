	number = {11},
	urldate = {2024-01-30},
	journal = {Ecology},
	author = {Hammill, Edd and Hawkins, Charles P. and Greig, Hamish S. and Kratina, Pavel and Shurin, Jonathan B. and Atwood, Trisha B.},
	month = nov,
	year = {2018},
	pages = {2467--2475},
	file = {Hammill et al. - 2018 - Landscape heterogeneity strengthens the relationsh.pdf:/Users/christophe_rouleau-desrochers/Zotero/storage/DKYJ3T65/Hammill et al. - 2018 - Landscape heterogeneity strengthens the relationsh.pdf:application/pdf},
