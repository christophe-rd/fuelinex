	pages = {134--136},
}

@inproceedings{luvisi_performance_1994,
	title = {Performance of {Thompson} seedless and {Crimson} seedless table grapes on ten rootstocks: {A} preliminary report},
	isbn = {0-9630711-1-4},
	abstract = {This research is a preliminary report on four rootstock trials on two cultivars (Thompson Seedless and Crimson Seedless) at four locations. Each location is separated by four to 20 kilometers and represents different soil types and grower cultural practices. Rootstock and scion wood sources were the same for all locations. The rootstocks, Salt Creek (Ramsey), Harmony, Freedom, 039-16, Kober 5BB, Teleki 5C, 1103 Paulsen, 3309C, 101-14 Mgt, and own root were used in each location. Plots were established in 1990 and data collection began in 1993. Harmony and 3309C produced the smallest berries in three out of four plots, while own-root and 039-16 produced the smallest berries in one plot. The largest berries were produced by Salt Creek in all four plots. Packable yields followed similar trends. Own root, Harmony, 3309C, 039-16, and Harmony (tied with 3309C) exhibited the lowest packable yields in at least one location. The rootstocks 039-16, Teleki 5C, Salt Creek (tied with 1103 Paulsen), and 1103 Paulsen exhibited the highest packable yields in at least one location. For Thompson Seedless there was a tendency for 3309C to have lower yields and 1103 Paulsen higher yields; 039-16 produced the smallest berries in one location, the largest berries in another other. Each location is capable of producing meaningful data; however, when several locations are compared, variation in rootstock performance increases. The results to date support the premise that there will not be a single rootstock recommendation for all cultivars. As more data is collected, rootstock recommendations could become both site- and cultivar-specific.},
	booktitle = {{TABLE} {GRAPE} {PRODUCTION}, {PROCEEDINGS} {OF} {THE} {INTERNATIONAL} {SYMPOSIUM}},
	publisher = {Amer Soc Enol \& Viticulture},
	author = {Luvisi, DA and Schrader, PL},
	editor = {Rantz, JM},
	year = {1994},
	pages = {115--119},
}

@article{gillings_comparison_1995,
