@techreport{wagner_oecologia_nodate,
	title = {Oecologia ({Berlin}) {Defoliation} increases nutritional quality and allelochemics of pine seedlings},
	abstract = {The concentration of phenols, procyanidins, and protein in pine foliage was determined at two and eight weeks following mechanical defoliation of 0, 25, 50, and 75\%. Changes in both mature and immature ponderosa pine, Pinus ponderosa Dougl. ex Laws, foliage were monitored. The lowest level of defoliation (25\%) produced the largest increase in phenols; 75 \% defoliation caused the largest increase in procyanidins. The number of phenolic compounds in mature foliage doubled following 25\% defolia-tion. Maximum protein production also occurred at moderate defoliation levels. Mechanical defoliation had a significant effect on the production of all compounds tested. The implications of these results for induced resistance research are discussed. The ability of plants to respond to herbivore attack by increasing concentrations of defensive compounds, induc-ible defenses, has received considerable interest in recent years. Research to date has focused on induction of defensive compounds; we report that foliage protein, as well as candidate defensive compounds, can be induced in pine seedlings. There is ample evidence that nitrogen is a limiting resource for herbivores (Mattson 1980). Consequently protein concentration, or a similar estimate of organic nitrogen, is a common measure of plant nutritional quality. Conversely , total plant phenols and procyanidins (polymeric phe-nolic compounds also called condensed tannins) are considered an index of poor nutritional quality (Levin 1971, Schultz and Baldwin 1982), and defend the plant against herbivores (Rhoades and Cates 1976, Feeny 1976). Recent evidence, however, suggests that phenols may also be used as nutrients by insects (Bernays and Woodhead 1982, Ber-nays et al. 1983). Materials and methods Eighty greenhouse-grown ponderosa pine seedlings (18 months old) were used for the experiment. A random-ized block experimental design was used. Pine seedlings were divided into four groups and randomly assigned to one of four treatments: 0, 25, 50, and 75\% defoliation. Defoliation was accomplished by removing the distal 25, Offprint requests to. M.R. Wagner 50, and 75\% of each needle with shears. Two weeks following defoliation 10 trees from each group were harvested and analyzed; the remainder were harvested at eight weeks. The two time periods were selected because they represented the approximate range of time larvae would be feeding on ponderosa pine in the field. At harvest all mature and immature needles were removed from each tree and immediately frozen at-20 {\textasciitilde} C. The needles were then clipped into 1 cm sections and freeze-dried at-50 {\textasciitilde} C and 50 millitorr in a Model 10-010 Virtis Automatic Freeze Dryer for 36 hours. The freeze-dried foliage samples were ground for 10 min in a Braun Mikro Dismembrator then treated four times with diethyl ether (10 mL) to extract resins and lipids. Resin and lipid free samples were then stored under dessication at-20 {\textasciitilde} C. Phenols, procyanidins, and proteins were extracted from the samples. Phenols were washed from the samples three times with 1.3 ml of acetone, procyanidins were washed from the samples three times with 1.3 ml of 70\% acetone water (v/v), and proteins were solubilized in 1.0 ml of 0.1 N NaOH for 24 h at room temperature. The phenol and pro-cyanidin extracts were centrifuged at {\textgreater} 2,500 rpm between each washing. The extracts were then pooled and evaporated to dryness at40 {\textasciitilde} C. The protein solution was centrifuged at {\textgreater} 2,500 rpm and an aliquot removed for analysis. Total phenols were analyzed according to Ribereau-Gayon (1972). Procyanidins and proteins were analyzed using a vanillin assay (Price et al. 1978) and the Coomassie Brilliant Blue dye technique (Bradford 1976), respectively.},
	author = {Wagner, Michael R and Evans, Paul D},
	file = {PDF:/Users/christophe_rouleau-desrochers/Zotero/storage/D5ECBWPR/wagner1985.pdf:application/pdf},
}

@article{valkama_delayed_2005,
	title = {Delayed induced responses of birch glandular trichomes and leaf surface lipophilic compounds to mechanical defoliation and simulated winter browsing},
