	year = {2006},
	pages = {331--339},
	file = {10658_2006_Article_9025.pdf:/Users/christophe_rouleau-desrochers/Downloads/10658_2006_Article_9025.pdf:application/pdf},
}

@article{serra_grapevine_2017,
