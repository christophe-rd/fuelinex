	journal = {ISPRS Journal of Photogrammetry and Remote Sensing},
	author = {Wu, Shengbiao and Wang, Jing and Yan, Zhengbing and Song, Guangqin and Chen, Yang and Ma, Qin and Deng, Meifeng and Wu, Yuntao and Zhao, Yingyi and Guo, Zhengfei and Yuan, Zuoqiang and Dai, Guanhua and Xu, Xiangtao and Yang, Xi and Su, Yanjun and Liu, Lingli and Wu, Jin},
	month = jan,
