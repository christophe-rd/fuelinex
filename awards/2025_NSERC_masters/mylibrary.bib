	author = {Wiley, Erin and Casper, Brenda B. and Helliker, Brent R.},
	month = mar,
	year = {2017},
	note = {Publisher: Blackwell Publishing Ltd},
	keywords = {defoliation, non-structural carbohydrates, carbon limitation, physiological ecology, tree growth},
	pages = {412--424},
	file = {PDF:/Users/christophe_rouleau-desrochers/Zotero/storage/NAF5DT6U/Journal of Ecology - 2016 - Wiley - Recovery following defoliation involves shifts in allocation that favour storage and.pdf:application/pdf},
