	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/1365-2745.13682},
	keywords = {phenology, plant growth, climate change, warming experiment, carbon cycle, leaf-out, senescence},
	pages = {2717--2728},
