@article{koshita_selection_2007,
	title = {Selection of interstocks for dwarfing {Japanese} persimmon ({Diospyros} kaki {Thunb}.) trees},
	volume = {76},
	issn = {1882-3351},
	doi = {10.2503/jjshs.76.288},
	abstract = {Effects of interstocks on the growth and fruit quality of `Fuyu' Japanese persimmon (Diospyros kaki Thunb.) were investigated to select an effective dwarfing interstock of this species. The performance of four interstocks (Ac-1, Ac-2, Y clones, and a seedling of Diospyros rhombifolia) was evaluated in combination with `Aogaki' (D. kaki) seedling rootstocks and `Fuyu' scions over a six-year period. Ac-1 and Y interstocks moderately reduced the tree size without influencing yield efficiency (yield per unit of crown area). In contrast, Ac-2 and D. rhombifolia interstocks reduced both tree size and fruit yield (kg/tree), and many of these trees died within a few years after planting. Annual fluctuations and no consistent trends were observed in the fruit weight among control and interstock trees. These results show the possibility of dwarfing `Fuyu' trees by using Ac-1 and Y as interstock.},
	number = {4},
	journal = {JOURNAL OF THE JAPANESE SOCIETY FOR HORTICULTURAL SCIENCE},
	author = {Koshita, Yoshiko and Morinaga, Kunihisa and Tsuchida, Yasuhisa and Asakura, Toshikazu and Yakushiji, Hiroshi and Azuma, Akifumi},
	month = oct,
