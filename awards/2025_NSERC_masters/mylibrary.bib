	journal = {Ecology},
	author = {MacDougall, Andrew S. and Turkington, Roy},
	year = {2005},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1890/04-0669},
	keywords = {Canada, British Columbia, dominance, facilitation, functional redundancy, oak savanna, plant competition, plant invasion, recruitment limitation, removal experiment, repeated-measures ANOVA},
