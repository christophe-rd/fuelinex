	journal = {Journal of Experimental Botany},
	author = {Cochetel, Noé and Météier, Eloïse and Merlin, Isabelle and Hévin, Cyril and Pouvreau, Jean-Bernard and Coutos-Thévenot, Pierre and Hernould, Michel and Vivin, Philippe and Cookson, Sarah Jane and Ollat, Nathalie and Lauvergeat, Virginie},
