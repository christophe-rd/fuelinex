@article{hall_size-efficiency_1976,
	title = {The {Size}-{Efficiency} {Hypothesis} and the {Size} {Structure} of {Zooplankton} {Communities}},
	volume = {7},
	issn = {0066-4162},
	doi = {10.1146/annurev.es.07.110176.001141},
	abstract = {The size-efficiency hypothesis, first proposed in 1965 by Brooks \& Dodson (24), has profoundly influenced the direction of research in aquatic ecology since its publica-tion.3 The size-efficiency hypothesis (SEH) is an attempt to explain the commonly observed inverse relationship between the abundances of small- and of large-bodied herbivorous zooplankton in freshwater lakes. The SEH was originally stated as follows: 1. Planktonic herbivores all compete for the fine particulate matter (1 to 15 L) of the open waters. 2. Larger zooplankters do so more efficiently and can also take larger particles. 3. Therefore, when predation is of low intensity the small planktonic herbivores will be competitively eliminated by large forms (dominance of large Cladocera and calanoid copepods). 4. But when predation is intense, size-dependent predation will eliminate the large forms, allowing the small zooplankters (rotifers, small Cladocera) that escape preda-tion to become the dominants. 5. When predation is of moderate intensity, it will, by falling more heavily upon the larger species, keep the populations of these more effective herbivores sufficiently low so that slightly smaller competitors are not eliminated. In the decade since this attractively simple and general hypothesis first appeared, few people have paused, as we do here, to consider the validity of its assumptions, examine its implications graphically, or provide a critical overview in light of accumulating data. Initially, we express algebraically the instantaneous increase rate of a zooplankton population as a function of several components of size-dependent competition. Next we characterize size-dependent predation and focus on its in-teraction with interspecific competition; then we analyze graphically their potential roles in structuring limnetic zooplankton communities. Finally, we note some impli-cations of the SEH and of our analysis for community-level theory in ecology.},
	number = {1},
	journal = {Annual Review of Ecology and Systematics},
	author = {Hall, D J and Threlkeld, S T and Burns, C W and Crowley, P H},
	year = {1976},
	pages = {177--208},
	file = {PDF:/Users/christophe_rouleau-desrochers/Zotero/storage/CUV38G3L/THE SIZE-EFFICIENCY HYPOTHESIS .pdf:application/pdf},
}

