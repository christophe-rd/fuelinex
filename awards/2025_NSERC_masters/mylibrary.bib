	note = {Number: 2},
	keywords = {variety},
	file = {Full Text PDF:/Users/christophe_rouleau-desrochers/Zotero/storage/MYJLNELT/Clingeleffer et al. - 2019 - The significance of scion × rootstock interactions.pdf:application/pdf},
}

@article{korner_four_nodate,
	title = {Four ways to define the growing season},
