	pages = {612--623},
	file = {Bichet et al. - 2016 - Maintaining animal assemblages through single‐spec.pdf:/Users/christophe_rouleau-desrochers/Zotero/storage/B3CSGXR8/bichet2016-umbrellaspecies (2).pdf:application/pdf},
}

