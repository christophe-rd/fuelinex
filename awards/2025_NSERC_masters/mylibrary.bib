	file = {Full Text PDF:/Users/christophe_rouleau-desrochers/Zotero/storage/DHMJB94M/Salifu et al. - 2009 - Nursery Nitrogen Loading Improves Field Performanc.pdf:application/pdf;Snapshot:/Users/christophe_rouleau-desrochers/Zotero/storage/54KIAIZY/j.1526-100X.2008.00373.html:text/html},
