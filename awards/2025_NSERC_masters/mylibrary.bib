	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1461-0248.2004.00616.x},
	keywords = {exotic species, enemy release hypothesis, non-indigenous species, Enemy inversion hypothesis, enemy of my enemy hypothesis, increased susceptibility hypothesis, invasion success},
	pages = {721--733},
	file = {Full Text PDF:/Users/christophe_rouleau-desrochers/Zotero/storage/ZFXZ4IP8/Colautti et al. - 2004 - Is invasion success explained by the enemy release.pdf:application/pdf;Snapshot:/Users/christophe_rouleau-desrochers/Zotero/storage/5W5JPB8B/j.1461-0248.2004.00616.html:text/html},
