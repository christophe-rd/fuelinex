@article{lehoczky_nutrient_1998,
	title = {Nutrient content of grapevine leaves in various graft combinations},
	volume = {29},
	issn = {0010-3624},
	doi = {10.1080/00103629809370087},
	abstract = {Rootstock-scion relationships are complex and this subject remains difficult for a researcher desiring to measure rootstock contributions to scion characteristics. The interaction of stock and scion is an important factor which essentially determines the productivity and the durability of the vineyard. Rootstock-scion interactions were studied with focus on mineral nutrition. Pot experiments were conducted under greenhouse conditions. Plants were grown in pots containing 2.5 kg soil. Clonal scions of Noble Italian Riesling (Vitis vinifera L.) were grafted onto different rootstocks. Based on results of leaf nutrient analysis, we obtained data about the interaction of rootstock varieties and scion relating to the mineral nutrition of the grafted plants, their differences and other characteristics.},
