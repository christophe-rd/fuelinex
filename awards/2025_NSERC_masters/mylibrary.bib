	author = {Reu, Jacqueline C. and Catano, Christopher P. and Spasojevic, Marko J. and Myers, Jonathan A.},
	year = {2022},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/ecy.3774},
	keywords = {biodiversity, ecosystem functioning, spatial scale, species diversity, net primary productivity, species turnover, temperate forest},
	pages = {e3774},
	file = {Full Text PDF:/Users/christophe_rouleau-desrochers/Zotero/storage/FFSLKWSS/Reu et al. - 2022 - Beta diversity as a driver of forest biomass acros.pdf:application/pdf;Snapshot:/Users/christophe_rouleau-desrochers/Zotero/storage/CFAYAUFK/ecy.html:text/html},
