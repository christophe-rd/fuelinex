	journal = {Reviews of Geophysics},
	author = {Mitchell, John F. B.},
	year = {1989},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/RG027i001p00115},
	pages = {115--139},
	file = {Full Text PDF:/Users/christophe_rouleau-desrochers/Zotero/storage/DN44USZD/Mitchell - 1989 - The “Greenhouse” effect and climate change.pdf:application/pdf;Snapshot:/Users/christophe_rouleau-desrochers/Zotero/storage/A3V88EZZ/RG027i001p00115.html:text/html},
