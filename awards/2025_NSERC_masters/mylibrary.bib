	keywords = {climate, Acer saccharum, Betula alleghaniensis, Abies balsamea, crop efficiency, mast flowering, mast seeding, potential seed crop, viable seed crop},
	pages = {413--422},
	file = {Full Text PDF:/Users/christophe_rouleau-desrochers/Zotero/storage/4MPY6NQG/Houle - 1999 - Mast seeding in Abies balsamea, Acer saccharum and.pdf:application/pdf},
